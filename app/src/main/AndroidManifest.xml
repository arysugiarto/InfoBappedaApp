<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bappedajabar.infobapeddapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />



        <activity
            android:name="com.bappedajabar.infobapeddapp.activity.DetailActivity"
            android:theme="@style/Useles" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bappedajabar.infobapeddapp.activity.MainActivity" />

            <intent-filter>
                <action android:name="KEGIATANACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bappedajabar.infobapeddapp.activity.LoginActivity"
            android:theme="@style/Useles" />
        <activity
            android:name="com.bappedajabar.infobapeddapp.activity.EditActivity"
            android:theme="@style/Useles" />
        <activity
            android:name="com.bappedajabar.infobapeddapp.activity.RegsitrasiActivity"
            android:theme="@style/Useles" />
        <activity
            android:name="com.bappedajabar.infobapeddapp.activity.MainActivity"
            android:theme="@style/Useles" >
            <intent-filter>
                <action android:name="KEGIATANACTIVITY"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.bappedajabar.infobapeddapp.activity.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/Useles">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <service android:name=".fierbase.MyFirebaseMessagingServices">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".fierbase.MyFirebaseInstanceIDServices">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>